@model FullStackTechTest.Models.Import.ImportViewModel

@{
    ViewData["Title"] = "Import";
}

<div class="container">
    <h2 class="mb-4">Import JSON Data</h2>
    @if(!string.IsNullOrEmpty(Model.Message))
    {
        if (Model.IsError)
        {
            <div class="alert alert-danger" role="alert">
                @Model.Message
            </div>
        }
        else
        {
            <div class="alert alert-success" role="alert">
                @Model.Message
            </div>
        }
        
    }
    <form asp-action="Index" asp-controller="Import" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="JsonFile">Select a JSON file:</label>
            <input type="file" id="JsonFile" name="JsonFile" class="form-control mt-3">
        </div>
        <button type="submit" class="btn btn-primary">Upload</button>
    </form>
</div>